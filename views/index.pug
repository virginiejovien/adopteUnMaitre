            // ****************  formulaire de connexion **********************
            form#form-connection
              .form-group
                input#pseudo.form-control(type='text' name='LoginPseudo' maxlength='31' size='31' placeholder='Pseudonyme' required='' pattern='^[a-zA-Z0-9]{1}[a-zA-Z0-9_&#$ \*\-]{3,31}$' title='Le 1er caractère doit être alphanumérique, les suivants également et la longueur comprise entre 4 et 30 caractères')
